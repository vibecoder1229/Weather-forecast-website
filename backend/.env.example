# Backend Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# ==================================================
# WeatherAPI Configuration (REQUIRED)
# ==================================================
# Get your free API key from: https://www.weatherapi.com/signup.aspx
# This is REQUIRED for the application to work
WEATHERAPI_KEY=your_api_key_here

# WeatherAPI Base URL (optional - only change if using a different endpoint)
WEATHERAPI_BASE_URL=http://api.weatherapi.com/v1

# ==================================================
# Flask Server Configuration
# ==================================================
# Host to bind the server to
# Use 0.0.0.0 to allow external connections
# Use 127.0.0.1 or localhost for local-only access
FLASK_HOST=0.0.0.0

# Port to run the server on
FLASK_PORT=5000

# Debug mode (True/False)
# NEVER use True in production!
FLASK_DEBUG=True

